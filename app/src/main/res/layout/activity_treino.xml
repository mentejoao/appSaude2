    <TextView
        android:id="@+id/textViewConservadorAcademiaFaseCronicaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRATAMENTO CONSERVADOR NA ACADEMIA - Fase Crônica"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewConservadorAcademiaFaseAgudaLink2"
