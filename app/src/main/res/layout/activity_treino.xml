        android:id="@+id/textViewConservadorCasaFaseCronicaLink2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Prancha Isométrica Baixa com Abdução de Quadril"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewConservadorCasaFaseCronicaLink1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Seção TRATAMENTO CONSERVADOR NA ACADEMIA - Fase Aguda -->
    <TextView
        android:id="@+id/textViewConservadorAcademiaFaseAgudaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRATAMENTO CONSERVADOR NA ACADEMIA - Fase Aguda"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewConservadorCasaFaseCronicaLink2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewConservadorAcademiaFaseAgudaLink1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
