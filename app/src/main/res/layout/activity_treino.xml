        android:id="@+id/textViewConservadorCasaFaseCronicaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRATAMENTO CONSERVADOR EM CASA - Fase Crônica"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewConservadorCasaPosLink2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewConservadorCasaFaseCronicaLink1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
