<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReferenciasActivity">

    <!-- ScrollView para permitir a rolagem do texto longo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TextView para exibir o texto informativo -->
        <TextView
            android:id="@+id/textView_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Silva, 2019; Tay et al., 2015)
            (Froes; Nunes; Negrelli, 2005),
            (Prentice, 2012,
            (Pinheiro, 2015),
            (Labella; Hennrikus;
            (Hewett, 2014;
            (Ferreira, 2022;"
            android:textSize="18sp"
            android:padding="16dp"
            android:lineSpacingExtra="6dp"
            android:scrollbars="vertical"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>